    <style name="Theme.HWOne" parent="Base.Theme.HWOne" />

    <style name="TextInputLayoutFilledStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxBackgroundColor">@color/dark_blue</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="boxStrokeColor">@color/color_selector</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.LogOut14</item>
    </style>

    <style name="TextInputEditTextFilledStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.White18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">35dp</item>
    </style>

    <style name="CheckBoxRememberMe">
        <item name="android:textColor">@color/gray</item>
        <item name="android:button">@drawable/custom_checkbox_selector</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.White14</item>
        <item name="buttonTint">@null</item>
    </style>

</resources>