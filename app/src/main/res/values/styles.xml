<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стилі для текстів -->
    <style name="TextAppearance.AppCompat.White24">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.AppCompat.White18">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.AppCompat.LogOut14">
        <item name="android:textColor">@color/log_out</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="TextAppearance.AppCompat.White12">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <!-- Стиль для ImageButton -->
    <style name="ImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle.LogOut" parent="ButtonStyle">
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:textColor">@color/log_out</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonStyle.Contacts" parent="ButtonStyle">
        <item name="android:backgroundTint">@color/view_my_contacts</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle.EditProfile" parent="ButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
